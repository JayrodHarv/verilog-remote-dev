{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "projName",
            "type": "promptString",
            "description": "Project name"
        }
    ],
    "tasks": [
        {
            "label": "Build & Sim",
            "type": "shell",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Lint",
            "type": "shell",
            "command": "make lint"
        },
        {
            "label": "Waves",
            "type": "shell",
            "command": "make waves"
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "make clean"
        },
        {
            "label": "New Verilog Project",
            "type": "shell",
            "command": "make new-proj NAME=${input:projName}"
        }
    ]
}